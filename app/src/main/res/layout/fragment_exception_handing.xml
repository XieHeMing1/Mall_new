<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qy.zgz.mall.page.money_purchase.error_handle.ExceptionHandingFragment">


    <!--fragment标题-->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:lines="1"
            android:text="异常处理"
            android:textColor="@color/color_black"
            android:textSize="100px" />

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="2078px"
        android:layout_height="1200px"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/share_white_30px"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="2078px"
            android:layout_height="wrap_content"
            android:background="@drawable/share_top_lightblue_30px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="30px"
            android:paddingTop="30px">


            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="1"
                    android:maxEms="10"
                    android:text="日期"
                    android:textSize="45px" />

                <View
                    android:layout_width="2px"
                    android:layout_height="40px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/color_black" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:lines="1"
                    android:text="错误信息"
                    android:textSize="45px" />

                <View
                    android:layout_width="2px"
                    android:layout_height="40px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/color_black" />

            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20px"
                    android:gravity="center"
                    android:lines="1"
                    android:text="会员名称"
                    android:textSize="45px" />

                <View
                    android:layout_width="2px"
                    android:layout_height="40px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/color_black" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20px"
                    android:gravity="center"
                    android:lines="1"
                    android:text="订单状态"
                    android:textSize="45px" />

                <View
                    android:layout_width="2px"
                    android:layout_height="40px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/color_black" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20px"
                    android:gravity="center"
                    android:lines="1"
                    android:text="订单号"
                    android:textSize="45px" />

                <View
                    android:layout_width="2px"
                    android:layout_height="40px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/color_black" />

            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20px"
                    android:lines="1"
                    android:text="金额"
                    android:textSize="45px" />

                <View
                    android:layout_width="2px"
                    android:layout_height="40px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/color_black" />
            </com.zhy.autolayout.AutoRelativeLayout>

            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20px"
                    android:gravity="center"
                    android:lines="1"
                    android:text="未出币"
                    android:textSize="45px" />

            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_exception_handing_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_exception_handing_pre"
            android:layout_width="100px"
            android:layout_height="100px"
            android:clickable="true"
            android:src="@drawable/pre_page" />

        <TextView
            android:id="@+id/tv_exception_handing_pagenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:gravity="center"
            android:text="1/1"
            android:textColor="@color/color_black"
            android:textSize="60px" />

        <ImageView
            android:id="@+id/iv_exception_handing_next"
            android:layout_width="100px"
            android:layout_height="100px"
            android:clickable="true"
            android:src="@drawable/next_page" />

    </com.zhy.autolayout.AutoLinearLayout>


    <!--按钮组-->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="150px"
        android:orientation="horizontal"
        android:visibility="visible">


        <Button
            android:id="@+id/btn_exception_handing_orderupdate"
            android:layout_width="500px"
            android:layout_height="180px"
            android:layout_marginRight="100px"
            android:background="@drawable/share_white"
            android:gravity="center"
            android:text="订单同步"
            android:textColor="@color/color_blue"
            android:textSize="100px" />

        <Button
            android:layout_width="500px"
            android:layout_height="180px"
            android:layout_marginLeft="100px"
            android:background="@drawable/share_white"
            android:gravity="center"
            android:text=""
            android:textColor="@color/color_blue"
            android:textSize="100px"
            android:visibility="invisible" />


    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120px"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_exception_handing_refund"
            android:layout_width="500px"
            android:layout_height="180px"
            android:layout_marginRight="100px"
            android:background="@drawable/share_white"
            android:gravity="center"
            android:text="申请退款"
            android:textColor="@color/color_blue"
            android:textSize="100px"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_exception_handing_rehandle"
            android:layout_width="500px"
            android:layout_height="180px"
            android:layout_marginLeft="100px"
            android:background="@drawable/share_white"
            android:gravity="center"
            android:text="重新处理"
            android:textColor="@color/color_blue"
            android:textSize="100px" />


    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>
