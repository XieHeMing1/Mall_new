<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/transparent"
    >

    <com.zhy.autolayout.AutoLinearLayout
    android:layout_width="1600px"
    android:layout_height="wrap_content"
    android:paddingTop="100px"
    android:paddingBottom="100px"
    android:paddingLeft="50px"
    android:paddingRight="50px"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_horizontal"
    android:background="#e9e9e9">

        <TextView
            android:id="@+id/tv_window_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:textSize="150px"
            android:text=""
            android:lines="1"
            android:ellipsize="end"/>

        <TextView
            android:layout_marginTop="50px"
            android:id="@+id/tv_window_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:textSize="100px"
            android:text="30秒后自动关闭"
            android:lines="1"
            android:ellipsize="end"/>

        <EditText
            android:layout_marginTop="150px"
            android:id="@+id/et_window_input"
            android:layout_width="1000px"
            android:layout_height="200px"
            android:textSize="80px"
            android:gravity="center"
            android:maxLength="6"
            android:background="@drawable/share_white"
            android:textColor="@color/color_black"
            android:inputType="numberPassword"
            android:lines="1"
            />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_marginTop="200px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginRight="150px"
            android:id="@+id/btn_tis_no"
            android:layout_width="500px"
            android:layout_height="200px"
            android:textSize="80px"
            android:gravity="center"
            android:text="取消"
            android:textColor="#01AAEE"
            android:background="@drawable/share_white"
            />

        <Button
            android:layout_marginLeft="150px"
            android:id="@+id/btn_tis_yes"
            android:layout_width="500px"
            android:layout_height="200px"
            android:textSize="80px"
            android:gravity="center"
            android:text="确定"
            android:textColor="#01AAEE"
            android:background="@drawable/share_white"
            android:visibility="visible"
           />

        <TextView
            android:id="@+id/tv_window_tis_scan_card"
            android:layout_marginLeft="150px"
            android:layout_width="600px"
            android:layout_height="400px"
            android:textSize="50px"
            android:gravity="center"
            android:text=""
            android:textColor="@color/color_black"
            android:background="@drawable/bg_btn_scan_card_tis"
            android:lines="2"
            android:visibility="gone"
            />


    </com.zhy.autolayout.AutoLinearLayout>

        <ImageView
            android:id="@+id/tv_window_tis_scan_card_small"
            android:layout_width="380px"
            android:layout_height="380px"
            android:layout_marginLeft="540px"
            android:layout_marginTop="30px"
            android:textSize="40px"
            android:gravity="center"
            android:src="@drawable/bg_btn_scan_card"
            android:lines="1"
            android:visibility="gone"
            />

    </com.zhy.autolayout.AutoRelativeLayout>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>