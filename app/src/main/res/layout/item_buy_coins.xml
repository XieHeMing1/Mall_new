<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="600px"
        android:background="@drawable/bg_grey_stroke_allround"
        android:orientation="vertical"
        >

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/arl_item_buy_coins_top"
        android:layout_width="match_parent"
        android:layout_height="400px"
        >

        <ImageView
            android:id="@+id/iv_item_buy_coins_bgcolor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:background="@drawable/bg_home_top_round"/>

        <TextView
            android:id="@+id/tv_item_buy_coins_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="100px"
            android:textStyle="bold"
            android:lines="1"
            android:ellipsize="end"
            android:layout_centerInParent="true"
            android:textColor="@color/coloer_wither"/>

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/all_item_buy_coins_bottom"
        android:layout_width="match_parent"
        android:background="@drawable/bg_home_bottom_round"
        android:orientation="horizontal"
        android:layout_height="200px">

        <TextView
            android:id="@+id/tv_item_buy_coins_price"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:textSize="60px"
            android:gravity="center"
            android:lines="1"
            android:layout_weight="1"
            android:ellipsize="end"
            android:layout_centerInParent="true"
            android:textColor="#9F1F0B"/>

        <ImageView
            android:id="@+id/iv_item_buy_coins_taocanvip"
            android:layout_width="150px"
            android:layout_height="200px"
            android:src="@drawable/taocanvip"
            android:visibility="gone"
            android:scaleType="fitXY"/>

    </com.zhy.autolayout.AutoLinearLayout>

        <!--自由购买-->
        <TextView
            android:id="@+id/tv_item_buy_coins_freedom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="100px"
            android:gravity="center"
            android:lines="2"
            android:ellipsize="end"
            android:textStyle="bold"
            android:visibility="gone"
            android:textColor="@color/color_blue"/>



    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>