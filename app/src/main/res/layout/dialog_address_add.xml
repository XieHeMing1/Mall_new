<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="2278px"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#DDDDDD"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="200px"
            android:background="#f5f5f5"
            android:paddingLeft="50px"
            android:paddingRight="50px"
        >

            <Button
                android:id="@+id/btn_dialog_cancel"
                android:layout_width="200px"
                android:layout_height="120px"
                android:textSize="60px"
                android:text="取消"
                android:textColor="@color/color_black"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/share_white_5px"
                />


            <Button
                android:id="@+id/btn_dialog_submit"
                android:layout_width="200px"
                android:layout_height="120px"
                android:textSize="60px"
                android:text="确定"
                android:textColor="@color/coloer_wither"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_green"
                />


        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_grey"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="2278px"
        android:layout_height="1300px"
        android:orientation="horizontal">


        <com.qy.zgz.mall.widget.MyWheelView
            android:id="@+id/wv_pro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <com.qy.zgz.mall.widget.MyWheelView
            android:id="@+id/wv_city"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


        <com.qy.zgz.mall.widget.MyWheelView
            android:id="@+id/wv_dit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoFrameLayout>