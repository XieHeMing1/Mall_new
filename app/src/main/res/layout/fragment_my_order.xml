<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             tools:context="com.qy.zgz.mall.page.fragment.MyOrderFragment">

    <!--标题-->
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/coloer_wither"
        android:paddingTop="50px"
        android:paddingBottom="50px"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        >

        <ImageView
            android:id="@+id/iv_my_order_back"
            android:layout_width="80px"
            android:layout_height="80px"
            android:textColor="@color/color_black"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="70px"
            android:textColor="@color/color_green"
            android:layout_centerInParent="true"
            android:text="我的订单"
            />



    </com.zhy.autolayout.AutoRelativeLayout>

    <!--选项卡-->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E1E1E1"
        android:paddingTop="50px"
        android:paddingBottom="50px"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:orientation="horizontal"
        >


        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/arl_my_order_contect_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_my_order_contect_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="60px"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@color/color_green"
                android:layout_centerInParent="true"
                android:text="全部"
                />



        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/arl_my_order_contect_unpay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_my_order_contect_unpay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="60px"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@color/color_black"
                android:layout_centerInParent="true"
                android:text="待付款"
                />


        </com.zhy.autolayout.AutoRelativeLayout>


        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/arl_my_order_contect_unsend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_my_order_contect_unsend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="60px"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@color/color_black"
                android:layout_centerInParent="true"
                android:text="待发货"
                />



        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/arl_my_order_contect_unget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_my_order_contect_unget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="60px"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@color/color_black"
                android:layout_centerInParent="true"
                android:text="待收货"
                />

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/arl_my_order_contect_unassess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_my_order_contect_unassess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="60px"
                android:lines="1"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@color/color_black"
                android:layout_centerInParent="true"
                android:text="待评价"
                />

        </com.zhy.autolayout.AutoRelativeLayout>


    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_grey"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_myorder_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>




</com.zhy.autolayout.AutoLinearLayout>
