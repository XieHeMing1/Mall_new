<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/transparent"
    >

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="1500px"
        android:layout_height="1050px"
        android:background="#EEEEEE"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
      >

        <TextView
            android:layout_marginTop="100px"
            android:id="@+id/tv_outcoins_tis_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="正在出币中..."
            android:textColor="@color/color_black"
            android:textSize="80px"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginTop="100px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="需要出币："
                android:textColor="@color/color_black"
                android:textSize="80px"/>

            <TextView
                android:id="@+id/tv_outcoins_tis_totalnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="0"
                android:textColor="#27ff7a"
                android:textSize="120px"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginTop="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="     已出币："
                android:textColor="@color/color_black"
                android:textSize="80px"/>

            <TextView
                android:id="@+id/tv_outcoins_tis_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="0"
                android:textColor="#27ff7a"
                android:textSize="120px"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <Button
            android:layout_marginTop="50px"
            android:id="@+id/btn_outcoins_tis_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="80px"
            android:gravity="center"
            android:text="停止出币"
            android:visibility="gone"
            android:textColor="@color/color_black"
            />




        <TextView
            android:id="@+id/tv_outcoins_tis_isbug"
            android:layout_marginTop="80px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:clickable="true"
            android:longClickable="true"
            android:text=""
            android:textColor="@color/color_red"
            android:visibility="gone"
            android:textSize="70px"/>


    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/tv_close"
        android:layout_width="100px"
        android:layout_height="100px"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:background="@drawable/x"
        />

</com.zhy.autolayout.AutoRelativeLayout>