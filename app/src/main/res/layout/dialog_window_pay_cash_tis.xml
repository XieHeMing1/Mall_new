<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="1600px"
    android:layout_height="1040px"
    android:gravity="center_horizontal"
    android:background="@color/transparent"
    >

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="1600px"
        android:layout_height="1040px"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_dialog_cash_tis"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_dialog_window_cashpay_tis_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="110px"
            android:layout_marginLeft="190px"
            android:ellipsize="end"
            android:lines="1"
            android:text=""
            android:textColor="@color/color_red"
            android:textSize="75px"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="400px"
        android:layout_height="400px"
        android:layout_marginLeft="100px"
        android:layout_marginTop="190px"
        android:background="@drawable/bg_grey_stroke_allround"
        android:orientation="vertical"
        >

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250px"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/bg_item_buy_coin_yellow"
                android:background="@drawable/bg_home_top_round"/>

            <TextView
                android:id="@+id/tv_dialog_window_cashpay_tis_coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="80px"
                android:textStyle="bold"
                android:lines="1"
                android:text=""
                android:ellipsize="end"
                android:layout_centerInParent="true"
                android:textColor="@color/coloer_wither"/>

        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/bg_home_bottom_round"
            android:orientation="horizontal"
            android:layout_height="150px">

            <TextView
                android:id="@+id/tv_dialog_window_cashpay_tis_price"
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:textSize="80px"
                android:gravity="center"
                android:lines="1"
                android:text=""
                android:layout_weight="1"
                android:ellipsize="end"
                android:layout_centerInParent="true"
                android:textColor="#9F1F0B"/>

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>


        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/all_dialog_window_cashpay_tis_group"
            android:layout_marginTop="100px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_dialog_window_cashpay_tis_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="60px"
                android:background="@drawable/bg_btn_out_coins"
                android:textColor="@color/color_black"
                android:text=""/>


            <Button
                android:layout_marginLeft="400px"
                android:id="@+id/btn_dialog_window_cashpay_tis_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="60px"
                android:background="@drawable/bg_btn_save_coins"
                android:textColor="@color/color_black"
                android:text=""/>

        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoLinearLayout>

    <!--支付信息-->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="470px"
        android:layout_height="400px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400px"
        android:orientation="vertical"
        android:gravity="center">

        <!--应付-->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="70px"
            android:text="应支付:"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/color_black"/>

        <TextView
            android:id="@+id/tv_dialog_window_cashpay_tis_shouldpay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="70px"
            android:text="0"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/color_black"/>

    </com.zhy.autolayout.AutoLinearLayout>

        <!--已付-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_marginTop="80px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="70px"
            android:text="已支付:"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/color_black"/>
        <TextView
            android:id="@+id/tv_dialog_window_cashpay_tis_hadpay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="70px"
            android:text="0"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/color_blue"/>

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="100px"
        android:layout_height="100px"
        android:background="@drawable/x"
        android:layout_alignParentRight="true"
        android:layout_marginTop="80px"
        android:layout_marginRight="50px"
        android:clickable="true"
        />



</com.zhy.autolayout.AutoRelativeLayout>