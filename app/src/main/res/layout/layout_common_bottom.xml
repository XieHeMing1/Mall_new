<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/layout_bottom_tab"
        android:layout_width="match_parent"
        android:layout_height="130px"
        android:layout_above="@+id/layout_common_bottom"
        android:layout_marginTop="30px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_vip_center"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:layout_weight="1"
            android:background="@drawable/ic_bottom_vip_center"
            android:foreground="?android:attr/selectableItemBackground" />

        <ImageView
            android:id="@+id/iv_purchase_coin"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:layout_weight="1"
            android:background="@drawable/ic_bottom_purchase_coin"
            android:foreground="?android:attr/selectableItemBackground" />

        <ImageView
            android:id="@+id/iv_exchange_mall"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:layout_weight="1"
            android:background="@drawable/ic_bottom_exchange_mall"
            android:foreground="?android:attr/selectableItemBackground" />

        <ImageView
            android:id="@+id/iv_lucky_lottery"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:layout_weight="1"
            android:background="@drawable/ic_bottom_lucky_lottery"
            android:foreground="?android:attr/selectableItemBackground" />

        <ImageView
            android:id="@+id/iv_new_game"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:layout_weight="1"
            android:background="@drawable/ic_bottom_discount_game"
            android:foreground="?android:attr/selectableItemBackground">
        </ImageView>

    </com.zhy.autolayout.AutoLinearLayout>

    <!-- 底部蓝色信息栏 -->
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:layout_gravity="center"
        android:layout_marginTop="30px"
        android:background="@color/color_main_page_bottom"
        android:orientation="horizontal"
        android:paddingLeft="50px"
        android:paddingRight="50px">

        <com.qy.zgz.mall.widget.MyTextView
            android:id="@+id/tv_vip_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:padding="20px"
            android:singleLine="true"
            android:text="小星星"
            android:textColor="@color/color_white"
            android:textSize="70px" />

        <com.qy.zgz.mall.widget.MyTextView
            android:id="@+id/tv_lottery"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_vip_name"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:padding="20px"
            android:singleLine="true"
            android:text="彩票数"
            android:textColor="@color/color_white"
            android:textSize="70px" />

        <com.qy.zgz.mall.widget.MyTextView
            android:id="@+id/tv_lottery_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_lottery"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:padding="20px"
            android:singleLine="true"
            android:text="2000"
            android:textColor="@color/color_white"
            android:textSize="70px" />

        <com.qy.zgz.mall.widget.MyTextView
            android:id="@+id/tv_game_coin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv_lottery_count"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:padding="20px"
            android:singleLine="true"
            android:text="游戏币"
            android:textColor="@color/color_white"
            android:textSize="70px" />

        <com.qy.zgz.mall.widget.MyTextView
            android:id="@+id/tv_game_coin_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_game_coin"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:padding="20px"
            android:singleLine="true"
            android:text="12345"
            android:textColor="@color/color_white"
            android:textSize="70px" />


        <ImageView
            android:id="@+id/iv_shopping_cart"
            android:layout_width="120px"
            android:layout_height="match_parent"
            android:layout_marginBottom="30px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:layout_marginTop="30px"
            android:visibility="visible"
            android:layout_toLeftOf="@+id/tv_main_page"
            android:background="@drawable/ic_white_cart" />

        <TextView
            android:id="@+id/tv_main_page"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20px"
            android:layout_marginTop="20px"
            android:background="@drawable/shape_logout"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:paddingLeft="150px"
            android:paddingRight="150px"
            android:text="首页"
            android:textColor="@color/color_white"
            android:textSize="60px" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <!-- 最底部信息栏 -->
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:orientation="horizontal">

        <!--<com.zhy.autolayout.AutoLinearLayout-->
        <!--android:layout_width="0px"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_gravity="center|left"-->
        <!--android:layout_weight="1"-->
        <!--android:paddingLeft="50px">-->

        <ImageView
            android:id="@+id/iv_high_setting"
            android:layout_width="130px"
            android:layout_height="130px"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@drawable/ic_setting"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="30px"
            android:paddingLeft="20px"
            android:text="一卡通软件"
            android:textColor="@color/color_black"
            android:textSize="70px" />

        <TextView
            android:id="@+id/tv_login_please"
            android:layout_width="wrap_content"
            android:layout_height="130px"
            android:layout_centerInParent="true"
            android:layout_marginLeft="70px"
            android:background="@drawable/shape_logout"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:paddingLeft="150px"
            android:paddingRight="150px"
            android:singleLine="true"
            android:text="请登录"
            android:textColor="@color/color_white"
            android:textSize="60px"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="130px"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20px"
            android:layout_marginLeft="70px"
            android:layout_marginTop="20px"
            android:background="@drawable/shape_logout"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="退出登录"
            android:textColor="@color/color_white"
            android:textSize="60px"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/sdv_customor_enquiry"
            android:layout_width="150px"
            android:layout_height="match_parent"
            android:layout_marginBottom="20px"
            android:layout_marginRight="30px"
            android:layout_marginTop="20px"
            android:layout_toLeftOf="@+id/tv_shop_name"
            android:background="@drawable/ic_wx_logo" />

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center|right"
            android:text="环游商城一体机"
            android:textColor="@color/color_black"
            android:textSize="70px" />
        <!--</com.zhy.autolayout.AutoLinearLayout>-->
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>