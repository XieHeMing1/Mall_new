<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_slot"
        android:layout_width="1400px"
        android:layout_height="1400px"
        android:layout_centerInParent="true"
        fresco:layout_auto_basewidth="height">
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="1200px"
            android:layout_height="1200px"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_slot"
            fresco:layout_auto_basewidth="height">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv1"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_centerVertical="true"
                fresco:layout_auto_basewidth="height|margin"
                fresco:actualImageScaleType="fitXY"
                fresco:placeholderImage="@mipmap/ic_launcher"
                fresco:roundAsCircle="true" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv2"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_centerHorizontal="true"
                fresco:layout_auto_basewidth="height|margin"
                fresco:actualImageScaleType="fitXY"
                fresco:placeholderImage="@mipmap/ic_launcher"
                fresco:roundAsCircle="true"/>

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv3"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                fresco:layout_auto_basewidth="height|margin"
                fresco:actualImageScaleType="fitXY"
                fresco:placeholderImage="@mipmap/ic_launcher"
                fresco:roundAsCircle="true" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv4"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                fresco:actualImageScaleType="fitXY"
                fresco:layout_auto_basewidth="height|margin"
                fresco:placeholderImage="@mipmap/ic_launcher"
                fresco:roundAsCircle="true" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv5"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_marginLeft="140px"
                android:layout_marginTop="140px"
                fresco:layout_auto_basewidth="height|margin"
                fresco:actualImageScaleType="fitXY"
                fresco:placeholderImage="@mipmap/ic_launcher"
                fresco:roundAsCircle="true" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv6"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="140px"
                fresco:actualImageScaleType="fitXY"
                android:layout_marginTop="140px"
                fresco:layout_auto_basewidth="height|margin"
                fresco:placeholderImage="@mipmap/ic_launcher"
                fresco:roundAsCircle="true" />

            <com.facebook.drawee.view.SimpleDraweeView

                android:id="@+id/iv7"
                android:layout_width="200px"
                android:layout_height="200px"
                fresco:actualImageScaleType="fitXY"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="140px"
                android:layout_marginLeft="140px"
                fresco:layout_auto_basewidth="height|margin"
                fresco:placeholderImage="@mipmap/ic_launcher"
                fresco:roundAsCircle="true" />

            <com.facebook.drawee.view.SimpleDraweeView

                android:id="@+id/iv8"
                android:layout_width="200px"
                android:layout_height="200px"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="140px"
                fresco:actualImageScaleType="fitXY"
                android:layout_marginRight="140px"
                fresco:layout_auto_basewidth="height|margin"
                fresco:placeholderImage="@mipmap/ic_launcher"
                fresco:roundAsCircle="true" />
        </com.zhy.autolayout.AutoRelativeLayout>
        <com.qy.zgz.mall.widget.ArcTextView
            android:layout_width="1400px"
            android:layout_height="1400px"
            android:id="@+id/tv1"
            fresco:layout_auto_basewidth="height|margin"/>
    </com.zhy.autolayout.AutoRelativeLayout>


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_start"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_centerInParent="true"
        android:background="@mipmap/ic_launcher" />
</com.zhy.autolayout.AutoRelativeLayout>

