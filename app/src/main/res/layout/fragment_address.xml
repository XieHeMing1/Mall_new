<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             tools:context="com.qy.zgz.mall.page.fragment.AddressFragment">


    <!--标题-->
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/coloer_wither"
        android:paddingTop="50px"
        android:paddingBottom="50px"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        >

        <ImageView
            android:id="@+id/iv_address_back"
            android:layout_width="80px"
            android:layout_height="80px"
            android:textColor="@color/color_black"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="70px"
            android:textColor="@color/color_green"
            android:layout_centerInParent="true"
            android:text="收货地址"
            />



    </com.zhy.autolayout.AutoRelativeLayout>

    <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
        android:id="@+id/rv_address_info"
        android:layout_marginTop="1px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/btn_address_add"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:textSize="80px"
        android:text="添加地址"
        android:textColor="@color/coloer_wither"
        android:gravity="center"
        android:background="@color/color_blue"/>

</com.zhy.autolayout.AutoLinearLayout>
