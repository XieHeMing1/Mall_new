<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:background="#DDDDDD"
             tools:context="com.qy.zgz.mall.page.fragment.AddressAddFragment">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:background="#DDDDDD">


    <!--标题-->
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/coloer_wither"
        android:paddingTop="50px"
        android:paddingBottom="50px"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        >

        <ImageView
            android:id="@+id/iv_address_add_back"
            android:layout_width="80px"
            android:layout_height="80px"
            android:textColor="@color/color_black"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/back"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="70px"
            android:textColor="@color/color_green"
            android:layout_centerInParent="true"
            android:text="收货地址"
            />



    </com.zhy.autolayout.AutoRelativeLayout>


    <View
        android:layout_marginTop="100px"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_grey"/>

    <!--填写地址信息-->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/coloer_wither"
        android:paddingLeft="50px"
        android:orientation="vertical">



        <!--收件人-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/coloer_wither"
            android:paddingTop="50px"
            android:paddingBottom="50px"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="400px"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:text="收件人:"
                android:textSize="60px"/>

            <EditText
                android:id="@+id/et_address_add_username"
                android:layout_marginLeft="100px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text=""
                android:textSize="60px"
                android:background="@color/transparent"
                android:maxLines="1"
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_grey"
                android:hint="请填写收件人姓名"/>



        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_grey"/>

        <!--手机号码-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/coloer_wither"
            android:paddingTop="50px"
            android:paddingBottom="50px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="400px"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:text="手机号码:"
                android:textSize="60px"/>

            <EditText
                android:id="@+id/et_address_add_userphone"
                android:layout_marginLeft="100px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text=""
                android:textSize="60px"
                android:background="@color/transparent"
                android:maxLines="1"
                android:inputType="number"
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_grey"
                android:hint="请填写联系人手机号码"/>



        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_grey"/>



        <!--邮政编码-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/coloer_wither"
            android:paddingTop="50px"
            android:paddingBottom="50px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="400px"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:text="邮政编码:"
                android:textSize="60px"/>

            <EditText
                android:id="@+id/et_address_add_zip"
                android:layout_marginLeft="100px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text=""
                android:textSize="60px"
                android:background="@color/transparent"
                android:maxLines="1"
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_grey"
                android:hint="请填写邮政编码"/>



        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_grey"/>

        <!--所在地区-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/coloer_wither"
            android:paddingTop="50px"
            android:paddingBottom="50px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="400px"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:text="所在地区:"
                android:textSize="60px"/>

            <TextView
                android:id="@+id/tv_address_add_regininfo"
                android:layout_marginLeft="100px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:hint="请选择地区"
                android:clickable="true"
                android:text=""
                android:textSize="60px"
                android:ellipsize="end"
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_grey"
                />



        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_grey"/>

        <!--街道地址-->
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/coloer_wither"
            android:paddingTop="50px"
            android:paddingBottom="50px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="400px"
                android:layout_height="wrap_content"
                android:textColor="@color/color_black"
                android:text="街道地址:"
                android:textSize="60px"/>

            <EditText
                android:id="@+id/et_address_add_areadetail"
                android:layout_marginLeft="100px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:hint="请填写街道地址"
                android:text=""
                android:textSize="60px"
                android:background="@color/transparent"
                android:maxLines="1"
                android:textColor="@color/color_black"
                android:textColorHint="@color/color_grey"
                />



        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_grey"/>

    <!--设置默认地址-->
   <com.zhy.autolayout.AutoLinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="100px"
       android:layout_marginLeft="80px"
       android:gravity="center_vertical"
       android:orientation="horizontal">

       <ImageView
           android:id="@+id/iv_address_add_defalut_add"
           android:layout_width="100px"
           android:layout_height="100px"
           android:clickable="true"
           android:src="@drawable/sel_tick_check"/>

       <TextView
           android:id="@+id/tv_address_add_defalut_add"
           android:layout_marginLeft="30px"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="60px"
           android:text="设置默认地址"
           android:ellipsize="end"
           android:lines="1"
           android:textColor="@color/color_black"/>
   </com.zhy.autolayout.AutoLinearLayout>
    
    <Button
        android:id="@+id/btn_address_add_finish"
        android:layout_marginTop="200px"
        android:layout_marginLeft="100px"
        android:layout_marginRight="100px"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:text="完成"
        android:textSize="80px"
        android:textColor="@color/coloer_wither"
        android:background="@drawable/shape_red"
        android:gravity="center"/>
    </com.zhy.autolayout.AutoLinearLayout>



</com.zhy.autolayout.AutoRelativeLayout>
