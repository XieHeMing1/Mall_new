<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     xmlns:tools="http://schemas.android.com/tools"
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:orientation="vertical"
                                     tools:context="com.qy.zgz.mall.page.fragment.OrderDetailFragment">

    <!--标题-->
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/coloer_wither"
        android:paddingTop="50px"
        android:paddingBottom="50px"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        >

        <TextView
            android:id="@+id/tv_order_detail_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:textColor="@color/color_black"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/back"
            android:drawablePadding="5px"
            android:text="返回"
            />



    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#EEEEEE"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE"
        android:layout_weight="1"
        android:scrollbars="none">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--订单信息-->
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/coloer_wither"
                android:padding="30px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:src="@drawable/order_icon"/>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30px"
                    android:paddingRight="30px"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tv_order_detail_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="60px"
                        android:lines="1"
                        android:gravity="left"
                        android:ellipsize="end"
                        android:textColor="@color/color_red"
                        android:text=""/>

                    <TextView
                        android:id="@+id/tv_order_detail_ordernum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="50px"
                        android:lines="1"
                        android:gravity="left"
                        android:ellipsize="end"
                        android:textColor="@color/color_black"
                        android:text="订单号 : "/>
                    <TextView
                        android:id="@+id/tv_order_detail_creattime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="50px"
                        android:lines="1"
                        android:gravity="left"
                        android:ellipsize="end"
                        android:textColor="@color/color_black"
                        android:text="创建时间 : "/>


                </com.zhy.autolayout.AutoLinearLayout>


            </com.zhy.autolayout.AutoLinearLayout>

            <!--地址-->
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_marginTop="50px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/coloer_wither"
                android:padding="30px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:src="@drawable/address_icon"/>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30px"
                    android:paddingRight="30px"
                    android:orientation="vertical">

                    <com.zhy.autolayout.AutoLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_order_detail_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="60px"
                            android:layout_weight="1"
                            android:lines="1"
                            android:gravity="left"
                            android:ellipsize="end"
                            android:text=""/>


                        <TextView
                            android:id="@+id/tv_order_detail_phone"
                            android:layout_width="500px"
                            android:layout_height="wrap_content"
                            android:textSize="60px"
                            android:lines="1"
                            android:gravity="right"
                            android:ellipsize="end"
                            android:text=""/>


                    </com.zhy.autolayout.AutoLinearLayout>

                    <TextView
                        android:id="@+id/tv_order_detail_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="60px"
                        android:lines="1"
                        android:gravity="left"
                        android:ellipsize="end"
                        android:text="收货地址: "/>


                </com.zhy.autolayout.AutoLinearLayout>


            </com.zhy.autolayout.AutoLinearLayout>



            <!--店铺-->
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_marginTop="50px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FAFAFA"
                android:padding="30px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_order_detail_shopname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="60px"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/color_green"
                    android:text=""
                    android:drawablePadding="5px"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:drawableRight="@drawable/next"/>


            </com.zhy.autolayout.AutoRelativeLayout>

            <!--商品-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_order_detail_goodinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/coloer_wither"
               />


            <!--价格-->
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_marginTop="1px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FAFAFA"
                android:orientation="vertical"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:padding="30px"
                >

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="50px"
                        android:layout_toLeftOf="@+id/tv_order_detail_tickets"
                        android:layout_marginRight="100px"
                        android:textColor="@color/color_red"
                        android:text="彩票合计 :"/>

                    <TextView
                        android:id="@+id/tv_order_detail_tickets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="50px"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/color_grey"
                        android:text=""/>


                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_marginTop="30px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="50px"
                        android:layout_toLeftOf="@+id/tv_order_detail_derate"
                        android:layout_marginRight="100px"
                        android:textColor="@color/color_grey"
                        android:text="减免 :"/>

                    <TextView
                        android:id="@+id/tv_order_detail_derate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="50px"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/color_grey"
                        android:text="¥ 0.00"/>


                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_marginTop="30px"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="50px"
                        android:layout_toLeftOf="@+id/tv_order_detail_fare"
                        android:layout_marginRight="100px"
                        android:textColor="@color/color_grey"
                        android:text="运费 :"/>

                    <TextView
                        android:id="@+id/tv_order_detail_fare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="50px"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/color_grey"
                        android:text="¥ 0.00"/>


                </com.zhy.autolayout.AutoRelativeLayout>





            </com.zhy.autolayout.AutoLinearLayout>

            <!--支付方式-->
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_marginTop="1px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FAFAFA"
                android:padding="30px"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50px"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/color_green"
                    android:text="支付方式:"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50px"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_black"
                    android:text="线上支付"/>


            </com.zhy.autolayout.AutoRelativeLayout>

            <!--配送方式-->
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_marginTop="1px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FAFAFA"
                android:padding="30px"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50px"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/color_green"
                    android:text="配送方式 : "/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50px"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color_black"
                    android:text="快递配送"/>



            </com.zhy.autolayout.AutoRelativeLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#EEEEEE"/>


        </com.zhy.autolayout.AutoLinearLayout>

    </ScrollView>



</com.zhy.autolayout.AutoLinearLayout>
