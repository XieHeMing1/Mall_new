<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/transparent"
    >

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/all_dialog_window_pay_tis_bg"
        android:layout_width="1600px"
        android:layout_height="940px"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_dialog_tis"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_dialog_window_pay_tis_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40px"
            android:ellipsize="end"
            android:lines="1"
            android:text=""
            android:textColor="@color/color_black"
            android:textSize="60px"/>

        <ImageView
            android:id="@+id/iv_dialog_window_pay_tis_qrcode"
            android:layout_width="300px"
            android:layout_height="300px"
            android:layout_marginLeft="270px"
            android:layout_marginTop="290px"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/all_dialog_window_pay_tis_group"
            android:layout_marginTop="100px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_dialog_window_pay_tis_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="60px"
                android:background="@drawable/bg_btn_out_coins"
                android:textColor="@color/color_black"
                android:text=""/>


            <Button
                android:layout_marginLeft="400px"
                android:id="@+id/btn_dialog_window_pay_tis_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="60px"
                android:background="@drawable/bg_btn_save_coins"
                android:textColor="@color/color_black"
                android:text=""/>

        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoLinearLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="100px"
        android:layout_height="100px"
        android:background="@drawable/x"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10px"
        android:layout_marginRight="10px"
        android:clickable="true"
        />



</com.zhy.autolayout.AutoRelativeLayout>