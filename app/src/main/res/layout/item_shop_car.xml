<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="40px"
        android:paddingLeft="60px"
        android:paddingRight="60px"
        android:paddingTop="40px">

        <ImageView
            android:id="@+id/iv_item_shop_car_sel"
            android:layout_width="100px"
            android:layout_height="100px"
            android:clickable="true"
            android:src="@drawable/select_grey"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_item_shop_car_goodsimg"
            android:layout_width="500px"
            android:layout_height="500px"
            android:layout_marginLeft="20px"
            android:visibility="visible" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="visible">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_item_shop_car_goodname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textColor="@color/color_black"
                    android:textSize="60px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/color_grey"
                    android:textSize="60px" />

                <TextView
                    android:id="@+id/tv_item_shop_car_tickets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/color_red"
                    android:textSize="70px" />

            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="300px"
            android:layout_height="100px"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_item_shop_car_reductnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#DDDDDD"
                android:gravity="center"
                android:text="-"
                android:textColor="@color/color_black"
                android:textSize="60px" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/color_grey" />

            <TextView
                android:id="@+id/tv_item_shop_car_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/coloer_wither"
                android:gravity="center"
                android:text="99"
                android:textColor="@color/color_black"
                android:textSize="60px" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/color_grey" />

            <Button
                android:id="@+id/btn_item_shop_car_addnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#DDDDDD"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/color_black"
                android:textSize="60px" />
        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_grey" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:paddingRight="60px">

        <TextView
            android:id="@+id/tv_item_shop_car_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="小计:彩票"
            android:textColor="@color/color_red"
            android:textSize="60px" />


    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_grey" />

</com.zhy.autolayout.AutoLinearLayout>