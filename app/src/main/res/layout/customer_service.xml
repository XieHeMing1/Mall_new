<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="1800px"
        android:layout_height="2502px"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingBottom="50px"
     >

        <com.zhy.autolayout.AutoFrameLayout
            android:layout_width="1800px"
            android:layout_height="700px"
            android:background="@color/coloer_wither">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="500px"
                    android:layout_height="500px"
                    android:src="@drawable/qr_customer_service"
                    />

                <TextView
                    android:layout_width="500px"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100px"
                    android:layout_gravity="center_vertical"
                    android:textSize="60px"
                    android:text="扫一扫二维码,可以在手机端和客服联系"/>
            </com.zhy.autolayout.AutoLinearLayout>

            <ImageView
                android:id="@+id/iv_dialog_customer_service_close"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="right"
                android:clickable="true"
                android:src="@drawable/x"/>

        </com.zhy.autolayout.AutoFrameLayout>

        <com.qy.zgz.mall.widget.MyWebView
            android:id="@+id/wb_customer_service_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></com.qy.zgz.mall.widget.MyWebView>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoFrameLayout>