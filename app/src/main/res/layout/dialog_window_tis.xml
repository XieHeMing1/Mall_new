<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/transparent"
    >

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="1200px"
        android:layout_height="700px"
        android:background="@drawable/bg_dialog_tis"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
      >

        <TextView
            android:layout_marginTop="50px"
            android:id="@+id/tv_dialog_window_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/color_black"
            android:textSize="70px"/>

        <TextView
            android:id="@+id/tv_dialog_window_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150px"
            android:gravity="center"
            android:paddingLeft="20px"
            android:paddingRight="20px"
            android:ellipsize="end"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/color_black"
            android:textSize="70px"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/all_dialog_window_tis_btn"
            android:layout_marginTop="80px"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <Button
                android:layout_marginRight="100px"
                android:id="@+id/btn_dialog_window_tis_no"
                android:layout_width="300px"
                android:layout_height="100px"
                android:textSize="60px"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/coloer_wither"
                android:background="@drawable/shape_green"
                />

            <Button
                android:layout_marginLeft="100px"
                android:id="@+id/btn_dialog_window_tis_yes"
                android:layout_width="300px"
                android:layout_height="100px"
                android:textSize="60px"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/coloer_wither"
                android:background="@drawable/shape_green"
                />


        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>