<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DDDDDD"
    >

    <!--店铺-->
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAFAFA"
        android:paddingTop="50px"
        android:paddingBottom="50px"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_myorder_shopname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60px"
            android:layout_alignParentLeft="true"
            android:textColor="@color/color_green"
            android:text="..."
            android:drawablePadding="5px"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/next"/>

        <TextView
            android:id="@+id/tv_item_myorder_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60px"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_red"
            android:text=""
            android:gravity="center"
            android:layout_centerVertical="true"
            />


    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_grey"/>

    <!--商品-->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAFAFA"
        android:paddingTop="30px"
        android:paddingBottom="30px"
        android:paddingLeft="60px"
        android:paddingRight="60px"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_item_myorder_img"
            android:layout_width="match_parent"
            android:layout_height="800px"
            android:layout_weight="1"
           />

        <TextView
            android:layout_marginLeft="50px"
            android:id="@+id/tv_item_myoder_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60px"
            android:clickable="true"
            android:gravity="center"
            android:textColor="@color/color_red"
            android:text="共一件"
            android:drawableRight="@drawable/next"
            android:drawablePadding="5px"
            />


    </com.zhy.autolayout.AutoLinearLayout>




    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_grey"/>


    <!--付款-->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FAFAFA"
        android:paddingTop="50px"
        android:paddingBottom="50px"
        android:paddingLeft="60px"
        android:paddingRight="60px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60px"
            android:textColor="@color/color_green"
            android:layout_centerVertical="true"
            android:text="实付 :"/>

        <TextView
            android:id="@+id/tv_item_myorder_tickets"
            android:layout_marginLeft="50px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="60px"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/color_grey"
            android:layout_centerVertical="true"
            android:text="彩票"/>

        <Button
            android:layout_marginLeft="20px"
            android:layout_width="400px"
            android:layout_height="100px"
            android:text="去付款"
            android:textSize="60px"
            android:gravity="center"
            android:visibility="invisible"
            android:background="@drawable/shape_green"
            android:textColor="@color/coloer_wither"
            />


        <Button
            android:id="@+id/btn_item_myorder_cancel"
            android:layout_marginLeft="30px"
            android:layout_width="400px"
            android:layout_height="100px"
            android:text="取消订单"
            android:textSize="60px"
            android:visibility="invisible"
            android:gravity="center"
            android:background="@drawable/shape_grey"
            android:textColor="@color/color_green"
            />

    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>