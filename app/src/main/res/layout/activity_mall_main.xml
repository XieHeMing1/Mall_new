<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_main_title_bg"
        android:layout_width="match_parent"
        android:layout_height="3000px">

        <ImageView
            android:id="@+id/sdv_main_title_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_main_page_title"
            />
    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:layout_above="@+id/layout_common_bottom"
        android:layout_below="@+id/rl_main_title_bg"
        android:orientation="horizontal">

        <!-- 会员中心 -->
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_vip_center"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="40px"
            android:layout_marginRight="10px"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/sdv_vip_center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_vip_center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="50px"
                android:gravity="center"
                android:text="会员中心"
                android:textColor="@color/color_white"
                android:textSize="80px" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <!-- 购币取币 -->
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_exchange_coin"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/sdv_exchange_coin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_exchange_coin"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="50px"
                android:gravity="center"
                android:text="购币取币"
                android:textColor="@color/color_white"
                android:textSize="80px" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <!-- 兑换商城 -->
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_mall"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/sdv_mall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_mall"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="50px"
                android:gravity="center"
                android:text="兑换商城"
                android:textColor="@color/color_white"
                android:textSize="80px" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <!-- 幸运大抽奖 -->
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_lucky_lottery"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/sdv_lucky_lottery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_lucky_lottery"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="50px"
                android:gravity="center"
                android:text="幸运大抽奖"
                android:textColor="@color/color_white"
                android:textSize="80px" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <!-- 新抽奖游戏 -->
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/rl_new_game"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="10px"
            android:layout_marginRight="40px"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <ImageView
                android:id="@+id/sdv_main_page"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_discount_game"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="50px"
                android:gravity="center"
                android:text="免单小游戏"
                android:textColor="@color/color_white"
                android:textSize="80px" />

        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <include
        android:id="@+id/layout_common_bottom"
        layout="@layout/layout_common_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"></include>

</com.zhy.autolayout.AutoRelativeLayout>